@model Smpl_prjct_mng_mnt_tol.EF.Project
@using Smpl_prjct_mng_mnt_tol.EF
@{
    ViewBag.Title = "Upload Files";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn {
        /*margin-left:7px;
        margin-right:7px;*/
        border-left: 10px;
    }

    .topbuttonsDiv {
        margin-bottom: 40px;
    }
</style>

<h1>Upload Files</h1>

<br />
<br />
<div style="float:right">
    @*<div>*@

    <button> @Html.ActionLink("Add Project", "AddProject", "Home", null, new { @class = "btn btn-primary" })</button>

    <button>
        @Html.ActionLink("Update Project", "UpdateProject", "Home", null, new { @class = "btn btn-danger" })
    </button>
    <button>
        @Html.ActionLink("Assign Employee", "AssignEmployee", "Home", null, new { @class = "btn btn-primary" })
    </button>




</div>

<div class="clearfix"></div>


@if (ViewBag.Message != null)
{
    <h1>@ViewBag.Message</h1>
}


@if (ViewBag.Message == null)
{
    //int id = (int)ViewBag.userId;

    <h2>UploadProfilePhoto</h2>

    using (Html.BeginForm("UploadFiles", "Home",new {id=Model.id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="file" />
        <input type="submit" name="Submit" id="Submit" value="Upload" />
    }
}

