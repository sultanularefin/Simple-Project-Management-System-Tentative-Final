<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simple Project Management Tool Arefin</title>
  
    @Styles.Render("~/Content/css")
    
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Simple Project Management Tool", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style= "color:#9bf442;font-size:x-large" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                    <li>@Html.ActionLink("About Us", "About", "Home",htmlAttributes: new{ @style= "color:#e8f441" })</li>
                   
                    @*htmlAttributes: new { @class = "control-label col-md-2" })*@
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="clearfix"></div>
        <footer style="float:left;left:auto;position:relative;">
            <p> &copy; @DateTime.Now.Year - Simple Project Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


